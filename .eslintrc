{
    "root": true,
    "env": {
        "node": true
    },
    "extends": [
        "plugin:vue/vue3-essential",
        "plugin:vue/vue3-recommended",
        "eslint:recommended"
    ],
    "plugins": [
        "import",
        "vue"
    ],
    "rules": {
        "vue/script-indent": [
            "error",
            4,
            {
                "baseIndent": 1
            }
        ],
        "vue/html-indent": [
            "error",
            4,
            {
                "baseIndent": 1
            }
        ],
        "vue/no-v-html": "off"
    }
}